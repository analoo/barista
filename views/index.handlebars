<div class="panel" id="left-panel">
    <div class="sub-div" id="order-panel">
        <h2>Pending Orders</h2>
        <table id="orders-table">
            <tr>
                <th> Status </th>
                <th> Customer </th>
                <th> Item </th>
                <th> Time To Complete </th>
                <th colspan="3"> Actions </th>
            </tr>
            {{#each orders}}
            <tr id="row-{{id}}" class:"row">
                <td><button class="delivered" data-delivered="{{delivered}}"></button></td>
                <td>{{customer_name}}</td>
                <td>{{item}}</td>
                <td>{{time}}</td>
                <td><button class="add" data-id="{{id}}"> Work on Order </button></td>
                <td><button class="delete" data-id="{{id}}"> Delete Order </button></td>
                <td><progress id="prog-{{id}}" data-time="{{time}}" class="progress-bar" value="30" max="100"></progress></td>

            </tr>
            {{/each}}
        </table>

    </div>
</div>
<div class="panel" id="center-panel">
    <div class="sub-div" id="order-area">
        <h1> customers</h1>
        <div class="customer">
            <img src="/assets/images_icons/tech_bro.png" alt="customer" id="customer" />
        </div>
        <div class="table"></div>
        <div class="table"></div>
        <div class="table"></div>




    </div>
    <div class="sub-div" id="cashier-panel">
        <div>
            <img src="/assets/images_icons/cashier.png" alt="cashier" id="cashier" />
        </div>

        <h2>Take An Order</h2>
        <div id="order-form">
            <form class="create-form">
                <div class="form-group">
                    <label for="it">Menu Item</label>
                    {{!-- figure out how to query menu to show this list --}}
                    <input type="text" id="item-id" name="item_id">

                    <label for="cust">Customer Name</label>
                    <input type="text" id="customer-name" name="customer_name">
                </div>
                <button type="submit" id="add">Add Order</button>
            </form>
        </div>
    </div>
    <div class="sub-div" id="pickup-panel">

    </div>
</div>