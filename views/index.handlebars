<div class="panel" id="left-panel">
    <div class="sub-div" id="order-panel">
        <h1>Pending Orders</h1>
        <table>
            {{#each orders}}
            <tr>
                <td><button class="delivered" data-delivered="{{delivered}}"></button></td>
                <td>{{customer}}</td>
                <td>{{item}}</td>
                <td>{{time}}</td>
                <td><button class="add" data-id="{{id}}"> + </button></td>
                <td><button class="delete" data-id="{{id}}"> - </button></td>
                <td>Progress: <progress id="js-progressbar" class="uk-progress" value="10" max="100"></progress></td>

            </tr>
            {{/each}}
        </table>

    </div>
</div>
<div class="panel" id="center-panel">
    <h2>Take An Order</h2>
    <div class="sub-div" id="cashier-panel">

    </div>
    <div class="sub-div" id="barista-panel">
        <div id="order-form">
        <form class="create-form">
            <div class="form-group">
                <label for="it">Menu Item</label>
                {{!-- figure out how to query menu to show this list --}}
                <input type="text" id="item-id" name="item_id">

                <label for="cust">Customer Name</label>
                <input type="text" id="customer-name" name="customer_name">
            </div>
            <button type="submit" id="add">Add Order</button>
        </form>
        </div>
        <div>
            <h2> Barista </h2>
            <img src="/assets/images_icons/cashier.png" alt="cashier" id="cashier"/>
        </div>
    </div>
    <div class="sub-div" id="pickup-panel">
            <img src="/assets/images_icons/table.png" alt="table" id="table"/>
    </div>
</div>

<div class="panel" id="right-panel">
        <div class="sub-div" id="customer-panel">

        </div>
        <div class="sub-div" id="blank-panel">

        </div>
        <div class="sub-div" id="coffee-panel">

        </div>
    </div>